<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp" android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal" android:orientation="horizontal"
    android:showDividers="middle" tools:context=".CocktailListActivity">

    <!--
    This layout is a two-pane layout for the Cocktails
    master/detail flow.
    
    -->

    <fragment android:id="@+id/cocktail_list"
        android:name="com.satellite_studio.cocktailrecipes.CocktailListFragment"
        android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
        tools:layout="@layout/cocktail_list_layout" />

    <FrameLayout android:id="@+id/cocktail_detail_container" android:layout_width="0dp"
        android:layout_height="match_parent" android:layout_weight="3" />

</LinearLayout>
